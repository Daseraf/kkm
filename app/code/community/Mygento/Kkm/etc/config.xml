<?xml version="1.0"?>
<config>
    <modules>
        <Mygento_Kkm>
            <version>1.0.0</version>
        </Mygento_Kkm>
    </modules>
    <global>
        <blocks>
            <kkm>
                <class>Mygento_Kkm_Block</class>
            </kkm>
        </blocks>
        <helpers>
            <kkm>
                <class>Mygento_Kkm_Helper</class>
            </kkm>
        </helpers>
        <models>
            <kkm>
                <class>Mygento_Kkm_Model</class>
            </kkm>
        </models>
        <events>
            <sales_order_invoice_save_after>
                <observers>
                    <kkm_sales_order_invoice_save_after>
                        <class>kkm/observer</class>
                        <method>sendCheque</method>
                    </kkm_sales_order_invoice_save_after>
                </observers>
            </sales_order_invoice_save_after>
            <sales_order_save_commit_after>
                <observers>
                    <kkm_sales_order_save_commit_after>
                        <class>kkm/observer</class>
                        <method>cancelCheque</method>
                    </kkm_sales_order_save_commit_after>
                </observers>
            </sales_order_save_commit_after>
        </events>  
    </global>
    <adminhtml>
        <translate>
            <modules>
                <kkm>
                    <files>
                        <default>Mygento_Kkm.csv</default>
                    </files>
                </kkm>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <kkm>
                                            <title>Mygento Kkm Configuration</title>
                                        </kkm>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <kkm>
            <general>
                <enabled>0</enabled>
                <debug>0</debug>
                <tax_all>1</tax_all>
                <auto_send_after_invoice>1</auto_send_after_invoice>
                <auto_send_after_cancel>1</auto_send_after_cancel>
            </general>
        </kkm>
    </default>
</config>